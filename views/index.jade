extends layout

block content
  p.welcomeMessage
   |Welcome to Adda
   br
  h1.home= title
  if(loggedIn)
   p.menus
    a(href="/dashboard") Dashboard
    |&nbsp;&nbsp;
    a(href="/logout") logout
  else
   p.menus
    a(href="/registration") Register
    |&nbsp;&nbsp;
    a(href="/login") Login
  div.topFiveTopics
   h4 Top Five Discussed Prasange
   br
   ul
    each topic in topics
     li #{topic.name}